# ==============================================
# MARKET MAKER TRADING PLATFORM CONFIGURATION
# ==============================================
# Copy this to .env and fill in your actual values
# KEEP YOUR PRIVATE KEYS SECURE AND NEVER COMMIT THEM!

# ==============================================
# ENVIRONMENT SETTINGS
# ==============================================
NODE_ENV=development
# Options: development, production, staging

# ==============================================
# WALLET CONFIGURATION - CRITICAL SECURITY
# ==============================================
# Your Solana wallet private key (Base58 format)
# CRITICAL: Keep this secret and secure!
# NEVER share or commit this to version control!
WALLET_PRIVATE_KEY=your_base58_private_key_here

# ==============================================
# SOLANA NETWORK CONFIGURATION
# ==============================================

# Development Environment (Devnet - Safe for testing)
# RPC_ENDPOINT=https://api.devnet.solana.com
# WS_ENDPOINT=wss://api.devnet.solana.com/

# Production Environment (Mainnet - Real money!)
# Use premium RPC endpoints for best performance:
RPC_ENDPOINT=https://api.mainnet-beta.solana.com
WS_ENDPOINT=wss://api.mainnet-beta.solana.com/

# Premium RPC Options (Recommended for production):
# RPC_ENDPOINT=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# RPC_ENDPOINT=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_KEY
# RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY
# WS_ENDPOINT=wss://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ==============================================
# TRADING CONFIGURATION
# ==============================================

# Token to trade (example: BONK token address)
TOKEN_ADDRESS=DezXAZ8z7PnrnRJjz3wXBoRgixCa6xjnB7YaB1pPB263

# Trading amounts (SOL)
BUY_AMOUNT_SOL=0.1
MIN_SELL_AMOUNT=1000

# Risk Management Settings
SLIPPAGE_BPS=300
MAX_SLIPPAGE_BPS=1000

# Performance Optimization (Mainnet-ready)
PRIORITY_FEE_LAMPORTS=5000
DYNAMIC_COMPUTE_UNIT_LIMIT=true
MAX_RETRIES=3

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
CORS_ORIGIN=*

# ==============================================
# PERFORMANCE & MONITORING
# ==============================================
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=INFO

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Enable in production for additional security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# Webhook secret for secure integrations
WEBHOOK_SECRET=your_webhook_secret_here

# ==============================================
# AWS SECRETS MANAGER (CRITICAL FOR PRODUCTION)
# ==============================================
# Enable AWS Secrets Manager for secure key storage (HIGHLY RECOMMENDED)
USE_SECRETS_MANAGER=false
# Set to true in production to use AWS Secrets Manager

# Secrets Manager Configuration
WALLET_SECRET_NAME=trading-bot/wallet-private-key
API_SECRETS_NAME=trading-bot/api-keys

# ==============================================
# TRANSACTION APPROVAL WORKFLOW (CRITICAL)
# ==============================================
# Enable transaction approval for large trades
ENABLE_APPROVAL_WORKFLOW=true

# Auto-approve trades below this amount (SOL)
AUTO_APPROVE_SOL=0.1

# Require manual approval above this amount (SOL)
REQUIRE_APPROVAL_SOL=1.0

# Maximum transaction size (SOL)
MAX_TRANSACTION_SOL=10.0

# Daily trading limit (SOL)
DAILY_LIMIT_SOL=50.0

# Approval timeout (milliseconds - 1 hour)
APPROVAL_TIMEOUT_MS=3600000

# Webhook URL for approval notifications
APPROVAL_WEBHOOK_URL=

# Email recipients for approval notifications (comma-separated)
APPROVAL_EMAIL_RECIPIENTS=

# ==============================================
# AWS CONFIGURATION (Optional)
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CloudWatch logging
ENABLE_CLOUDWATCH_LOGGING=false

# Server Configuration
PORT=3000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-12-digit-aws-account-id
NODE_ENV=production
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_PORT=3001
HEALTH_CHECK_PATH=/health

# Strategy Execution Configuration
MAX_CONCURRENT_STRATEGIES=10
DEFAULT_RESTART_DELAY_MS=60000
STRATEGY_TIMEOUT_MS=300000

# Monitoring Configuration
CLOUDWATCH_ENABLED=true
ALERTING_ENABLED=true

# Persistence Configuration
PERSISTENCE_ENABLED=false
PERSISTENCE_INTERVAL_MS=30000

# ==============================================
# PAPER TRADING CONFIGURATION
# ==============================================
# Enable paper trading mode (simulate trades without real transactions)
PAPER_TRADING_ENABLED=true

# Initial paper trading balances
PAPER_TRADING_INITIAL_SOL=10
PAPER_TRADING_INITIAL_USDC=0

# Simulation settings
PAPER_TRADING_ENABLE_SLIPPAGE=true
PAPER_TRADING_SLIPPAGE_PERCENTAGE=0.5
PAPER_TRADING_ENABLE_FEES=true
PAPER_TRADING_FEE_PERCENTAGE=0.25
PAPER_TRADING_NETWORK_FEE_SOL=0.000005

# Market data source for paper trading
# Options: jupiter, dexscreener, coingecko
PAPER_TRADING_DATA_SOURCE=jupiter 